@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string name = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Hakkımızda Veri Listesi</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 15%">
                                Metin 1
                            </th>
                            <th style="width: 15%">
                                Metin 2
                            </th>
                            <th style="width: 15%">
                                Görsel 1
                            </th>
                            <th style="width: 15%">
                                Görsel 2
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>
                            <th style="text-align:right;">
                                @Html.Action("AboutPartial", "About")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.AboutStatus == true)
                            {
                                name = "Aktif";
                            }
                            else
                            {
                                name = "Pasif";
                            }
                            <tr>
                                <td>
                                    @item.AboutID
                                </td>
                                <td>
                                    @item.AboutDetails1
                                </td>
                                <td>
                                    @item.AboutDetails2
                                </td>
                                <td>
                                    @item.AboutImage1
                                </td>
                                <td>
                                    @item.AboutImage2
                                </td>
                                <td>
                                    @name
                                </td>
                                <td class="project-actions text-right">
                                    @if (item.AboutStatus == true)
                                    {
                                        <a href="/About/UpdateAbout/@item.AboutID" class="btn btn-warning disabled">
                                            <i class="fas fa-thumbs-up">
                                            </i>
                                            Aktif Yap
                                        </a>
                                        <a href="/About/UpdateAbout/@item.AboutID" class="btn btn-danger">
                                            <i class="fas fa-thumbs-down">
                                            </i>
                                            Pasif Yap
                                        </a>
                                    }
                                    @if (item.AboutStatus == false)
                                    {
                                        <a href="/About/UpdateAbout/@item.AboutID" class="btn btn-warning">
                                            <i class="fas fa-thumbs-up">
                                            </i>
                                            Aktif Yap
                                        </a>
                                        <a href="/About/UpdateAbout/@item.AboutID" class="btn btn-danger disabled">
                                            <i class="fas fa-thumbs-down">
                                            </i>
                                            Pasif Yap
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>
