@model EntityLayer.Concrete.Writer
@{
    Layout = null;
}

<!Doctype html>
<html lang="tr">
<head>
    <title>Mvc Proje Kampı Yazar Girişi</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-20/css/style.css">
</head>
<body class="img js-fullheight" style="background-image: url(/AdminLTE-3.0.4/login-form-20/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Yazar Kayıt Sayfası</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        @using (Html.BeginForm("Create", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="row form-group">
                                <div class="col-md-2 col-lg-2">
                                    <label style="margin-left:14px;">Yazar Resim</label>
                                </div>
                                <div class="col-md-10 col-lg-10">
                                    <input type="file" class="form-control" name="WriterImage" placeholder="Yazar Resim" required>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6 col-lg-6">
                                    <input type="text" class="form-control" name="WriterName" placeholder="Adınız" required>
                                </div>
                                <div class="col-md-6 col-lg-6">
                                    <input type="text" class="form-control" name="WriterSurName" placeholder="Soyadınız" required>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6 col-lg-6">
                                    <input type="text" class="form-control" name="WriterMail" placeholder="Mail Adresiniz" required>
                                </div>
                                <div class="col-md-6 col-lg-6">
                                    <input id="password-field" type="password" class="form-control" name="WriterPassword" placeholder="******" required>
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                            </div>
                            <div class="row form-group">
                                <input type="text" class="form-control" name="WriterTitle" placeholder="Unvanı" required>
                            </div>
                            <div class="row form-group">
                                <input type="text" class="form-control" name="WriterAbout" placeholder="Hakkında" required>
                            </div>
                            <div class="row form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Kayıt Ol</button>
                            </div>
                        }
                        <p class="w-100 text-center">&mdash;<a href="/Login/WriterLogin"> GERİ DÖN </a>&mdash;</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/main.js"></script>
</body>
</html>