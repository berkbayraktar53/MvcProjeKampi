@model EntityLayer.Concrete.Skill
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Yetenek Kartı Sayfası</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Skills Profile Widget template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="~/AdminLTE-3.0.4/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <script src="~/AdminLTE-3.0.4/web/js/jquery-1.11.1.min.js"></script>
    <script src="~/AdminLTE-3.0.4/web/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default',
                width: 'auto',
                fit: true
            });
        });
    </script>
</head>
<body>
    <div class="main">
        <div class="main-info w3l">
            <div class="main-row">
                <h3 class="title">Yetenek Ekle</h3>
                @using (Html.BeginForm("AddSkill", "Skill", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.HiddenFor(x => x.SkillID, new { @class = "form-control" })
                        <label style="color:white;">Adı</label>
                        @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.SkillName)
                        <br />
                        <label style="color:white;">Yüzdelik Dilim</label>
                        @Html.TextBoxFor(x => x.Percentile, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Percentile)
                        <br />
                        <label style="color:white;">Değer</label>
                        @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Value)
                        <br />
                        <button style="float:left;" class="btn btn-success">Ekle</button>
                        <a href="/Skill/Index" id="btn1" style="float:right;" class="btn btn-info">Geri</a>
                        <br />
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>