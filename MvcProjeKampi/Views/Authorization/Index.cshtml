@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string name = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Yetkilendirme İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Admin Mail
                            </th>
                            <th style="width: 10%">
                                Yetki
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>
                            <th style="text-align:right;">
                                <a href="/Authorization/AddAdmin" class="btn btn-success">Yeni Admin Tanımla</a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.AdminStatus == true)
                            {
                                name = "Aktif";
                            }
                            else
                            {
                                name = "Pasif";
                            }
                            <tr>
                                <td>
                                    @item.AdminID
                                </td>
                                <td>
                                    @item.AdminUserName
                                </td>
                                <td>
                                    @item.AdminRole
                                </td>
                                <td>
                                    @name
                                </td>
                                <td class="project-actions text-right">
                                    @if (item.AdminStatus == true)
                                    {
                                        <a href="/Authorization/Activate/@item.AdminID" class="btn btn-info disabled">
                                            <i class="fas fa-thumbs-up">
                                            </i>
                                            Aktif Yap
                                        </a>
                                        <a href="/Authorization/Deactivate/@item.AdminID" class="btn btn-info">
                                            <i class="fas fa-thumbs-down">
                                            </i>
                                            Pasif Yap
                                        </a>
                                    }
                                    @if (item.AdminStatus == false)
                                    {
                                        <a href="/Authorization/Activate/@item.AdminID" class="btn btn-info">
                                            <i class="fas fa-thumbs-up">
                                            </i>
                                            Aktif Yap
                                        </a>
                                        <a href="/Authorization/Deactivate/@item.AdminID" class="btn btn-info disabled">
                                            <i class="fas fa-thumbs-down">
                                            </i>
                                            Pasif Yap
                                        </a>
                                    }
                                    <a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-warning">
                                        <i class="far fa-edit">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a href="/Authorization/DeleteAdmin/@item.AdminID" class="btn btn-danger">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>